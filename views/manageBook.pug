extends base
block content 

    <main class="main">
        <div class="pageContainer">
            .user-view__content
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Edit Book
                    //- form.form.form-book-data(data-book-id=`${book.id}`)
                    form.form.form-book-data(data-book-id=`${book.id}`)
                        .form__group
                            label.form__label(for='name') Name
                            input#name.form__input(type='text', value=`${book.name}`, required)
                        .form__group.ma-bt-md
                            label.form__label(for='author') Author
                            input#author.form__input(type='text', value=`${book.author}`, required)
                        .form__group.form__photo-upload
                            img.form__user-photo(src=`${book.img}`, alt='Book photo')
                            a.btn-text(href='') Choose new photo
                        .form__group.right
                            button.btn.btn--small.btn--green Save changes
                            //- button.btn.btn--small.btn--green#btn-update-book(data-book-id=`${book.id}`) Save changes
        </div>
    </main>
    